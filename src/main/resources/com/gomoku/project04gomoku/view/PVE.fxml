<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.canvas.Canvas?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>

<BorderPane xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1">
    <center>
        <Canvas fx:id="canvas" height="400.0" onMouseClicked="#handleCanvasClick" width="400.0"
                BorderPane.alignment="CENTER"/>
    </center>
    <bottom>
        <HBox alignment="CENTER" spacing="30.0">
            <Button fx:id="RestartButton" text="Restart" onAction="#restartGame"/>
            <Button fx:id="BackButton" text="Back" onAction="#GoBackToMain"/>
        </HBox>
    </bottom>
</BorderPane>