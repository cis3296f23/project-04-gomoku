<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.scene.canvas.Canvas?>
<BorderPane xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.gomoku.project04gomoku.mvc.ViewModel.PVEController">
    <center>
        <Canvas fx:id="canvas" height="400.0" onMouseClicked="#handleCanvasClick" width="400.0" BorderPane.alignment="CENTER" />
    </center>
    <bottom>
        <HBox alignment="CENTER" spacing="30.0">
            <Button fx:id="RestartButton" text="Restart" onAction="#restartGame" />
            <Button fx:id="BackButton" text="Back" onAction="#GoBackToMain" />
        </HBox>
    </bottom>
</BorderPane>