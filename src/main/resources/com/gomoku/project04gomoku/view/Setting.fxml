<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import javafx.collections.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<StackPane xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/16">
    <VBox alignment="CENTER" spacing="10">

        <padding>
            <Insets bottom="20" left="20" right="20" top="20" />
        </padding>


        <Label text="Setting" />


        <HBox alignment="CENTER" spacing="10">
            <Label text="BGM Volume：" />
            <Slider fx:id="bgmVolumeSlider" max="100" min="0" value="50"  />
        </HBox>


        <HBox alignment="CENTER" spacing="10">
            <Label text="BGM Select：" />
            <ComboBox fx:id="bgmSelectionBox" prefWidth="150">
                <items>
                    <FXCollections fx:factory="observableArrayList">


                    </FXCollections>
                </items>
            </ComboBox>
        </HBox>

      
        <GridPane alignment="CENTER" hgap="10" vgap="10">
            <Button text="Apply" GridPane.columnIndex="1" GridPane.rowIndex="1" onAction="#applySettings"/>
            <Button onAction="#GoBackMain" text="Cancel" GridPane.columnIndex="2" GridPane.rowIndex="1" />
         <columnConstraints>
            <ColumnConstraints />
            <ColumnConstraints />
            <ColumnConstraints />
         </columnConstraints>
         <rowConstraints>
            <RowConstraints />
            <RowConstraints />
         </rowConstraints>
        </GridPane>
    </VBox>
</StackPane>
